{
  "manifest_version": 3,
  "name": "Business Registration Assistant",
  "version": "0.1",
  "description": "Simple assistant for business registration forms",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Business Registration Assistant"
  },
  "icons": {
    "48": "icon.png"
  }
}